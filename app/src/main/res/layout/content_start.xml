<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.StartActivity"
    tools:showIn="@layout/activity_start"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="229dp"
            android:layout_height="100dp"
            android:text="@string/app_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#5e5c5c"
            android:textSize="40sp" />
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/aaaaa"
            android:layout_height="@dimen/aabb"
            android:src="@drawable/logo3"
            android:contentDescription="@string/vilshofen_guide_logo" />
    </LinearLayout>

    <Button
        android:id="@+id/button_trip_plan"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:onClick="changeToTripPlanActivity"
        android:text="@string/routeplaner"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button_vilshofen_map"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:onClick="changeToVilshofenMap"
        android:text="@string/map"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/choose_sight"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:onClick="changeToChooseSightActivity"
        android:text="@string/sights"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button_credits"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:onClick="changeToCreditsActivity"
        android:text="@string/credits"
        android:textColor="#ffffff" />
</LinearLayout>
